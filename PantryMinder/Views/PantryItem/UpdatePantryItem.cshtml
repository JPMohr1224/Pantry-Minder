@model PantryItem

<h2>Update @Model.ItemName</h2>

@using (Html.BeginForm("UpdatePantryItemToDatabase", "PantryItem", "Post"))
{
    <input asp-for="ItemID" type="hidden" value="@Model.ItemID" />

    <label asp-for="ItemName" class="control-label">Item Name</label>
    <input type="text" name="ItemName" class="form-control" value="@Model.ItemName" />

    <label asp-for="Category" class="control-label">Category</label>
    <input type="text" step="0.01" name="Category" class="form-control" value="@Model.Category" />

    <label asp-for="Quantity" class="control-label">Quantity</label>
    <input type="number" step="0.01" name="Quantity" class="form-control" value="@Model.Quantity" />

    <label asp-for="Unit" class="control-label">Unit</label>
    <input type="text" step="0.01" name="Unit" class="form-control" value="@Model.Unit" />

    

    <input type="submit" value="Update Pantry Item" class="btn btn-primary" />
}
